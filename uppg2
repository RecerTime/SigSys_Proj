import matplotlib.pyplot as plt
import matplotlib.transforms as mtransforms
from matplotlib.widgets import Button, Slider
import numpy as np
import scipy.signal as scs

signal_freq = 4e3 #Hz
signal_amp = 1 #V

noise_freq = 14e3 #Hz
noise_amp = 0.1 #V

samp_freq = 16e3 #Hz

def sin_wave(freq, amp, x):
    return amp * np.sin(freq * 2 * np.pi * x)

x = np.arange(0, 1e-3, 1e-6)
print(x)
fig, ax = plt.subplots()

signal = lambda x: sin_wave(signal_freq, signal_amp, x)
noise = lambda x: sin_wave(noise_freq, noise_amp, x)


ax.plot(x, )
ax.plot(x, )
ax.plot(x, sin_wave(noise_freq, noise_amp, x)+sin_wave(signal_freq, signal_amp, x))

plt.show()